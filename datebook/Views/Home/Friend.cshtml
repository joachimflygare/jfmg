@model datebook.Models.FriendModel

@{
    ViewBag.Title = "Friend";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title -Datebook.com</title>
    <link href="@Url.Content("~/Content/main.css")" rel="stylesheet" type="text/css" />
</head>
<body>
    <div id="wrapper">
        <div id="header">
            @if (Request.IsAuthenticated)
            {
                @Html.ActionLink("Log out", "LogOut", "Home", new { @id = "LogOut" })
            }
            <h2 class="hTaggar">datebook.com</h2>
            <div id="backToProfileDiv">
                <h1>@Html.ActionLink("Profile", "Profile", "Home", new { @id = "linkStyles" })</h1>
            </div>
            <div id="IndexLoggin">
            </div>
        </div>
        <div id="divPicture">
            <img src="@Url.Content("~/pictures/couple.jpg")" id="couplepic" />
            <div id="friendsDiv">
                <h1>Friends</h1>
                @foreach (var friend in ViewBag.Friend) 
                {
                <h2>@Html.ActionLink((string)friend.Username, "Profile", "Home", new { username = @friend.Username }, null)</h2>  
                }
            </div>
            <div id="pendingDiv">
                <h1>Pending request</h1>
            </div>
        </div>
    </div>
</body>
</html>




