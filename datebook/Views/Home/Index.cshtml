@using Repositories
@model datebook.Models.IndexModel
@{ViewBag.Title = "Index";}


<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title -Datebook.com</title>
    <link href="@Url.Content("~/Content/main.css")" rel="stylesheet" type="text/css" />
</head>
<body>
    <div id="wrapper">
        <div id="header">
            <h2 class="hTaggar">datebook.com</h2>
            <div id="Loggin">
                @using (Html.BeginForm("Profile", "Home", FormMethod.Post)) { 
                @Html.TextBoxFor(model => model.Username, new {placeholder = "Username"})
                @Html.ValidationMessageFor(model => model.Username)
                @Html.PasswordFor(model => model.Password, new {placeholder = "Password"})
                @Html.ValidationMessageFor(model => model.Password)
                <input type="submit" value="Log in"/>
                }
            </div>
        </div>
        <div id="divPicture">
            <img src="@Url.Content("~/pictures/couple.jpg")" id="couplepic" />
            <div id="Create">
                <h1> Join now!</h1>
                @using (Html.BeginForm("Profile", "Home", FormMethod.Post)){
                    @Html.TextBoxFor(model => model.Name, new { placeholder = "Firstname" })<br>
                    @Html.TextBoxFor(model => model.RegUsername, new { placeholder = "Username" })
                    @Html.ValidationMessageFor(model => model.RegUsername)<br>
                    @Html.DropDownList("Gender", new List<SelectListItem> {
                    new SelectListItem {Text = "Male", Value= "Male"},
                    new SelectListItem {Text = "Female", Value= "Female"}
                    }, "Select Gender")<br />
                    @Html.TextBoxFor(model => model.Age, new { placeholder = "Age" })<br>
                    @Html.PasswordFor(model => model.Password, new { placeholder = "Password" })
                    @Html.ValidationMessageFor(model => model.Password)<br>
                    <br />
                    <input type="button" value="Register">
                }
            </div>
            <div id="pc"><img src="@Url.Content("~/pictures/pris.jpg")"><p>Cilla Chan, 30</p></div>
            <div id="mz"><img src="@Url.Content("~/pictures/Mark.jpg")"><p>Zack Markenberg, 31</p></div>
        </div>
    </div>
</body>
</html>




