@model datebook.Models.LogInModel
@{
    ViewBag.Title = "LogIn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title -Datebook.com</title>
    <link href="@Url.Content("~/Content/main.css")" rel="stylesheet" type="text/css" />
</head>
<body>
    <div id="wrapper">
        <div id="header">
            <h2 class="hTaggar">datebook.com</h2>
            <div id="Loggin">
                @using (Html.BeginForm())
                    { 
                    @Html.ValidationSummary(true, "Login failed")
                    @Html.TextBoxFor(model => model.Username, new { placeholder = "Username" })
                    @Html.ValidationMessageFor(model => model.Username)
                    @Html.PasswordFor(model => model.Password, new { placeholder = "Password" })
                    @Html.ValidationMessageFor(model => model.Password)
                    <input type="submit" value="Log In" />
                    }
            </div>
        </div>
        <div id="divPicture">
            <img src="@Url.Content("~/pictures/couple.jpg")" id="couplepic" />
            <div id="Create">
               
            </div>
        </div>
    </div>
</body>
</html>