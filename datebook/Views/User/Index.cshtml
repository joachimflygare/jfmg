@model datebook.Models.UserModel

@{
    ViewBag.Title = "Index";
}

  
    <!DOCTYPE html>
    <html>
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title -Datebook.com</title>
        <link href="@Url.Content("~/Content/main.css")" rel="stylesheet" type="text/css"/>
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <div id="wrapper">

            <div id="header">
                <p>Namn: @Model.Name</p>
                <br />
                <p>Id: @Model.Uid</p>>
                    <h2 class="hTaggar">datebook.com</h2>
                    <div id="Loggin">
                        <form>
                            <input type="text" name="username" value="Username">
                            <input type="text" name="password" value="Password">
                            <input type="button" value="Log in">
                        </form>
                    </div>
            </div>
            <div id="divPicture">
                <img src="@Url.Content("~/pictures/couple.jpg")" id="couplepic"/>
                <div id="Create">
                    <h1> Join now!</h1>
                    <form id="regForm">
                        <input type="text" name="firstname" value="Firstname"><br>
                        <input type="text" name="username" value="Username"><br>
                        <select>
                            <option value="Female">Female</option>
                            <option value="Male">Male</option>
                            <option value="Other">Other</option>
                        </select><br />
                        <input type="text" name="age" value="Age"><br>
                        <input type="text" name="password" value="Password"><br>
                        <input type="text" name="passwordAgain" value="Password again"><br>
                        <br />
                        <input type="button" value="Register">
                    </form>
                </div>
                <div id="pc"><img src="@Url.Content("~/pictures/pris.jpg")"><p>Cilla Chan, 30</p></div>
                <div id="mz"><img src="@Url.Content("~/pictures/Mark.jpg")"><p>Zack Markenberg, 31</p></div>
            </div>
        </div>
    </body>
</html>




